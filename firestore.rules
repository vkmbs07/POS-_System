rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the user is accessing their own shop data
    function isOwner(shopId) {
      return isAuthenticated() && request.auth.uid == shopId;
    }

    // Match the shop document where the document ID is the user's UID
    match /shops/{shopId} {
      allow read, write: if isOwner(shopId);

      // Allow access to all subcollections (products, sales, etc.) of the shop
      match /{document=**} {
        allow read, write: if isOwner(shopId);
      }
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
